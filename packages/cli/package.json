{
  "name": "@pricectl/cli",
  "version": "0.1.0",
  "description": "CLI for pricectl - Control your pricing infrastructure",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pricectl": "./bin/run"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts"
  },
  "keywords": ["stripe", "iac", "cli"],
  "license": "MIT",
  "dependencies": {
    "@pricectl/core": "workspace:*",
    "@pricectl/constructs": "workspace:*",
    "@oclif/core": "^3.15.0",
    "@oclif/plugin-help": "^6.0.9",
    "stripe": "^14.9.0",
    "chalk": "^4.1.2",
    "diff": "^5.1.0",
    "esbuild-register": "^3.5.0"
  },
  "devDependencies": {
    "@oclif/test": "^3.1.3",
    "@types/diff": "^5.0.9"
  },
  "oclif": {
    "bin": "pricectl",
    "commands": "./dist/commands",
    "hooks": {
      "init": "./dist/hooks/init"
    },
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " "
  }
}
